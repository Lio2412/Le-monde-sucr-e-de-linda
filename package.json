{
  "name": "le-monde-sucre-de-linda",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "build": "concurrently \"cd backend && npm run build\" \"cd frontend && npm run build\"",
    "start": "concurrently \"cd backend && npm start\" \"cd frontend && npm start\"",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "vitest --config tests/setup/vitest/vitest.unit.config.ts",
    "test:watch": "vitest watch --config tests/setup/vitest/vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage --config tests/setup/vitest/vitest.unit.config.ts",
    "test:unit": "vitest run tests/unit --config tests/setup/vitest/vitest.unit.config.ts",
    "test:integration": "vitest run tests/integration --config tests/setup/vitest/vitest.integration.config.ts",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "clean": "rimraf node_modules && cd backend && rimraf node_modules dist && cd ../frontend && rimraf node_modules .next"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@playwright/test": "^1.50.1",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.14",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.4",
    "axios": "^1.7.9",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cypress": "^14.0.1",
    "framer-motion": "^12.0.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "node-mocks-http": "^1.16.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.6.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@tanstack/react-query": "^5.66.0",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
